    }

    .sidebar-content::-webkit-scrollbar-track {
        background: transparent;
    }

    .sidebar-content::-webkit-scrollbar-thumb {
        background: #dee2e6;
        border-radius: 10px;
    }

        .sidebar-content::-webkit-scrollbar-thumb:hover {
            background: #ced4da;
        }

    box-shadow: 3px 0 12px rgba(0,0,0,.06);
    }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const sidebar = document.getElementById('sidebar');
        const sidebarToggles = document.querySelectorAll('.sidebar-mobile-main-toggle');

        sidebarToggles.forEach(btn => {
            btn.addEventListener('click', e => {
                e.preventDefault();
                sidebar.classList.toggle('collapsed');
            });
        });

        document.addEventListener('click', e => {
            if (!sidebar.contains(e.target) && !e.target.classList.contains('sidebar-mobile-main-toggle')) {
                sidebar.classList.remove('collapsed');
            }
        });
    });

    function filterSidebar() {
        const input = document.getElementById('sidebar-search-input').value.toLowerCase();
        const items = document.querySelectorAll('#sidebar-items .nav-item');

        items.forEach(item => {
            const text = item.innerText.toLowerCase();
            item.style.display = text.includes(input) ? '' : 'none';
        });
    }
</script>