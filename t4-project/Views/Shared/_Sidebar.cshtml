            color: #2196F3;
        }

    .sidebar.collapsed {
        transform: translateX(-100%);
        transition: transform .3s ease;
    }

    #sidebar-toggle-btn {
        background: rgba(0,0,0,.05) !important;
        border: none;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all .2s ease;
    }

        #sidebar-toggle-btn i {
